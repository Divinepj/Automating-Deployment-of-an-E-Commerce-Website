pipeline {
    agent any
    
    environment {
        // Define environment variables if needed
        JAVA_HOME = "/path/to/your/java/home"
        MAVEN_HOME = "/path/to/your/maven/home"
    }
    
    stages {
        stage('Build') {
            steps {
                // Checkout source code from Git repository
                git 'https://github.com/Divinepj/Automating-Deployment-of-an-E-Commerce-Website.git'
                
                // Set up Java and Maven
                tool 'OracleJDK11'
                tool 'Maven3'
                
                // Build the web application
                sh 'mvn clean install'
            }
        }
        
        stage('Deploy') {
            steps {
                // Deploy the web application (example: copy to deployment directory)
                sh 'cp target/yourwebapp.war /path/to/deployment/directory'
            }
        }
    }
}
